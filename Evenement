package donnee;

import java.util.Arrays; 
import java.util.List;
import java.util.Random;

public class Evenement {
	private String evenement ;
	
	public String getEvenement() {
		return evenement;
	}

	public void setEvenement(String evenement) {
		this.evenement = evenement;
	}
	
	public static String evenementAleatoireGaz() {
	Random rand = new Random();
	List <String> liste = Arrays.asList("evenement géopolitique","crise petrolière","pic pollution");
	String randomElement = liste.get(rand.nextInt(liste.size()));
	return randomElement;
	}
	
	public static String evenementAleatoireTransport() {
	Random rand = new Random();
	List <String> liste = Arrays.asList("coronavirus","catastrophe naturelle","guerre");
	String randomElement = liste.get(rand.nextInt(liste.size()));
	return randomElement;
	}
	
	public static String evenementAleatoireAutomobile() {	
	Random rand = new Random();
	List <String> liste = Arrays.asList("sortie nouveau véhicule","salon de l'automobile");
	String randomElement = liste.get(rand.nextInt(liste.size()));
	return randomElement;
	}
	
	public static String evenementAleatoireAutomobileNegatif() {	
	Random rand = new Random();
	List <String> liste = Arrays.asList("défaut moteur","Augmentation pollution mondiale");
	String randomElement = liste.get(rand.nextInt(liste.size()));
	return randomElement;
	}
	
	
	public static String evenementAleatoireInformatique() {
	Random rand = new Random();
	List <String> liste = Arrays.asList("salon jeu vidéo","salon presentation téléphone");
	String randomElement = liste.get(rand.nextInt(liste.size()));
	return randomElement;
	}
	
	public static String evenementAleatoireInformatiqueNegatif() {
	Random rand = new Random();
	List <String> liste = Arrays.asList("attaque informatique mondiale","Défaut processeur");
	String randomElement = liste.get(rand.nextInt(liste.size()));
	return randomElement;
	}
	
	public static void EvenementSecteurAleatoire() {
		Random rand = new Random();
		int randomElement = rand.nextInt(6);
		if (randomElement == 0) {
			System.out.println("Evenement de cette semaine : "+ evenementAleatoireGaz()+ ", secteur touché : GAZ - 30%");
			ListEntreprise.modifier_capital(0.7,"gaz");
	
		}
		else if (randomElement == 1) {
			System.out.println("Evenement de cette semaine : "+ evenementAleatoireTransport()+ ", secteur touché : TRANSPORT - 30%");
			ListEntreprise.modifier_capital(0.7,"transport");
			
		}
		else if(randomElement == 2) {
			System.out.println("Evenement de cette semaine : "+ evenementAleatoireAutomobile()+ ", secteur touché : AUTOMOBILE +30%");
			ListEntreprise.modifier_capital(1.3,"gaz");
		}
		else if(randomElement == 3) {
			System.out.println("Evenement de cette semaine : "+ evenementAleatoireAutomobileNegatif()+ ", secteur touché : AUTOMOBILE - 30%");
			ListEntreprise.modifier_capital(0.7,"automobile");
		}
		else if(randomElement ==4) {
			System.out.println("Evenement de cette semaine : "+evenementAleatoireInformatique()+ ", secteur touché : INFORMATIQUE +30%");
			ListEntreprise.modifier_capital(1.3,"informatique");
		}
		else if(randomElement ==5) {
			System.out.println("Evenement de cette semaine : "+ evenementAleatoireInformatiqueNegatif()+ ", secteur touché : INFORMATIQUE - 30%");
			ListEntreprise.modifier_capital(0.7,"informatique");
		}
	}
	
	public static void semaine() {
		for (int i =1; i < 6; i++) {
			System.out.println("Semaine" + i + "\n");
			EvenementSecteurAleatoire();
			ListEntreprise.Achat(5);
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
	public static void main(String[]args){
		ListEntreprise.testEntreprise();
		semaine();
		ListEntreprise.testAjouterAchat();
		
	}
}

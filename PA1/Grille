package gui;

import java.awt.BorderLayout;
import java.awt.Font;
import java.awt.GridLayout;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JSplitPane;
import javax.swing.JTextField;

	
	
	
@SuppressWarnings("serial")
public class Grille extends JFrame  {
	
	
	
	private static final Font BUTTON_FONT = new Font(Font.DIALOG, Font.BOLD, 20);
	private static final Font TEXT_FIELD_FONT = new Font(Font.MONOSPACED, Font.BOLD, 20);
	

	
	
	private JPanel container=new JPanel();
	
	private JPanel hautgauche=new JPanel();
	private JPanel container1=new JPanel();
	private ImageIcon icone = new ImageIcon("images/image1.jpg");
    private JLabel image = new JLabel(icone);
    
    
    private JPanel basgauche=new JPanel();
    private JPanel container3=new JPanel();
    
    
    
    
    private JPanel hautdroit=new JPanel();
	private JPanel container2=new JPanel();
	
	private JPanel basdroit=new JPanel();
	
    
    private JLabel semaine=new JLabel("Semaine n°");
    private JLabel valeurPortefeuille=new JLabel("Valeur Portefeuille");
    
    private JButton pause=new JButton("Pause");
    private JButton play=new JButton("Play");
    private JButton news= new JButton("News");
    private JButton acheter=new JButton("Acheter"); 
    private JButton vendre=new JButton("Vendre");
    private JButton ajouterFavori=new JButton ("Ajouter Favori");
    
    private JTextField textPane = new JTextField();
    private JTextField textPane1 = new JTextField();
    private JTextField textPane2 = new JTextField();
    private JTextField textPane3 = new JTextField();
    private JScrollPane scroll = new JScrollPane(textPane,JScrollPane.VERTICAL_SCROLLBAR_ALWAYS,JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
    private JScrollPane scroll1 = new JScrollPane(textPane1,JScrollPane.VERTICAL_SCROLLBAR_ALWAYS,JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
    private JScrollPane scroll2 = new JScrollPane(textPane2,JScrollPane.VERTICAL_SCROLLBAR_ALWAYS,JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
    private JScrollPane scroll3 = new JScrollPane(textPane3,JScrollPane.VERTICAL_SCROLLBAR_ALWAYS,JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
    
    
    private JTextField text1=new JTextField();
    private JTextField text2=new JTextField();
    private JTextField text3=new JTextField();
    private JTextField text4=new JTextField();
    private JTextField portefeuille=new JTextField();
 
    
    private JSplitPane split=new JSplitPane();
    private JSplitPane split1=new JSplitPane();
    
    
   
	
	public Grille() {
		
		
		
       
		
		this.setTitle("Simulateur de Bourse");
		this.setSize(300,150);
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		
        container.setLayout(new GridLayout(2,2));
        
        container.add(hautgauche);
        container.add(hautdroit);
        container.add(basgauche);
        container.add(basdroit);
        
        hautgauche.setLayout(new GridLayout(2,1));
        hautgauche.add(container1);
        hautgauche.add(image);
        
        
        
        container1.setLayout(new GridLayout(1,3));
        container1.add(semaine);
        semaine.setPreferredSize(null);
        container1.add(play);
        play.setFont(BUTTON_FONT);
        container1.add(pause);
        pause.setFont(BUTTON_FONT);
        
        
        
        hautdroit.setLayout(new GridLayout(1,2));
        container2.setLayout(new GridLayout(4,2));
        container2.add(news);
        news.setFont(BUTTON_FONT);
        container2.add(text1);
        text1.setFont(TEXT_FIELD_FONT);
        container2.add(acheter);
        acheter.setFont(BUTTON_FONT);
        container2.add(text2);
        text2.setFont(TEXT_FIELD_FONT);
        vendre.setFont(BUTTON_FONT);
        container2.add(vendre);
        container2.add(text3);
        text3.setFont(TEXT_FIELD_FONT);
        container2.add(ajouterFavori);
        ajouterFavori.setFont(BUTTON_FONT);
        container2.add(text4);
        text4.setFont(TEXT_FIELD_FONT);
        scroll.setVerticalScrollBarPolicy(20);
        scroll.setColumnHeaderView(new JLabel("ListeEntreprise"));
        hautdroit.add(scroll);
        hautdroit.add(container2);
        
        basgauche.setLayout(new GridLayout(2,1));
        container3.setLayout(new GridLayout(1,2));
        container3.add(valeurPortefeuille);
        container3.add(portefeuille);
        basgauche.add(container3);
        scroll1.setVerticalScrollBarPolicy(20);
        scroll1.setColumnHeaderView(new JLabel("Historique Achat"));
        basgauche.add(scroll1);
        
        basdroit.setLayout(new GridLayout(2,1));
        scroll2.setVerticalScrollBarPolicy(20);
        scroll2.setColumnHeaderView(new JLabel("Action Possédé par l'utilisateur"));
        basdroit.add(scroll2);
        scroll3.setVerticalScrollBarPolicy(20);
        scroll3.setColumnHeaderView(new JLabel("EntrepriseFavorite"));
        basdroit.add(scroll3);
        
        split = new JSplitPane(JSplitPane.HORIZONTAL_SPLIT,  hautgauche,hautdroit);
        split1 = new JSplitPane(JSplitPane.HORIZONTAL_SPLIT, basgauche, basdroit);
        
       
        container.add(split, BorderLayout.CENTER);
        container.add(split1, BorderLayout.CENTER);
        
        
      
        
        this.setContentPane(container);
        this.setVisible(true);
	}
	
	public static void main(String []args) {
		new Grille();
	}
}

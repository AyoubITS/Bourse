package donnee;

import java.util.ArrayList;
import java.util.EnumMap;
import java.util.Iterator;

import donnee.Entreprise;



public class ConstructionEntreprise {
	private  ArrayList<Entreprise> listeEntreprise;
	Entreprise entreprise=new Entreprise("ok",30);
	private EnumMap<Secteur,Entreprise> entrepriseSecteur;
	
	public ConstructionEntreprise() {
		
	}
	
	public void AjoutEntreprise(String nom, int capital,Secteur sec) {
		Iterator<Entreprise> it = listeEntreprise.iterator();
		while (it.hasNext()) {
			Entreprise entreprise=new Entreprise(nom,capital);
			listeEntreprise.add(entreprise);
			entrepriseSecteur.put(sec, entreprise);
		}
	}

	public static void main(String[] args) {
	ConstructionEntreprise constr = new ConstructionEntreprise();
	constr.AjoutEntreprise("Total", 394000000,Secteur.gaz);
	constr.AjoutEntreprise("Shell", 230000000,Secteur.gaz);
	constr.AjoutEntreprise("BP",150000000,Secteur.gaz);
	constr.AjoutEntreprise("Esso", 120000000,Secteur.gaz);
	constr.AjoutEntreprise("Edf", 50000000,Secteur.gaz);
	constr.AjoutEntreprise("Apple", 900000000,Secteur.informatique);
	constr.AjoutEntreprise("Logitech", 85000000,Secteur.informatique);
	constr.AjoutEntreprise("Hp inc.", 46000000,Secteur.informatique);
	constr.AjoutEntreprise("Dell", 168000000,Secteur.informatique);
	constr.AjoutEntreprise("Wester Digital Corporation", 179000000,Secteur.informatique);
	constr.AjoutEntreprise("Air France KLM", 139000000,Secteur.transport);
	constr.AjoutEntreprise("American Airlines", 165000000,Secteur.transport);
	constr.AjoutEntreprise("Delta Airlines", 31000000,Secteur.transport);
	constr.AjoutEntreprise("Lufthansa", 28000000,Secteur.transport);
	constr.AjoutEntreprise("Air Canada", 80000000,Secteur.transport);
	constr.AjoutEntreprise("Renault", 90000000,Secteur.automobile);
	constr.AjoutEntreprise("Michelin", 241000000,Secteur.automobile);
	constr.AjoutEntreprise("Ford Motor", 210000000,Secteur.automobile);
	constr.AjoutEntreprise("Valeo", 650000000,Secteur.automobile);
	constr.AjoutEntreprise("Peugeot PSA", 35000000,Secteur.automobile);
	}
	
	
	
}
